{% extends "LapaperieAdminBundle::layoutAdmin.html.twig" %}

{% block content %}

<h1>Companies & Résidences</h1>

<table class="records_list zebra-striped">
    <thead>
        <tr>
            <th>Companie</th>
            <th>Création</th>
            <th>Début de résidence</th>
            <th>Fin de résidence</th>
            <th>Sortie de Fabrique</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in paginator %}
        <tr>
            <td><a href="{{ path('companie_edit', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
            <td>{{ entity.creation }}</td>
            <td>{{ entity.dateresidencebeginning is empty ? "" : entity.dateresidencebeginning|date('j M Y') }}</td>
            <td>{{ entity.dateresidenceend is empty ? "" : entity.dateresidenceend|date('j M Y') }}</td>
            <td>{{ entity.datesortiedefabrique is empty ? "" : entity.datesortiedefabrique|date('j M Y') }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="pagination">
{{ pagerfanta(paginator, 'adminView') }}
</div>

<a href="{{ path('companie_create') }}" class="btn primary">
Saisir une nouvelle Companie/Résidence
</a>
{% endblock %}
