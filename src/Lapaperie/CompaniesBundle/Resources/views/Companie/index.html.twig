{% extends "LapaperieCompaniesBundle::layout.html.twig" %}

{% block content %}

<h1>Companie list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Cr√©ation</th>
            <th>Date_residence_beginning</th>
            <th>Date_residence_end</th>
            <th>Date_sortie_de_fabrique</th>
            <th>Short Text</th>
            <th>Long text</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('companie_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.creation }}</td>
            <td>{{ entity.dateresidencebeginning|date('Y-m-d H:i:s') }}</td>
            <td>{{ entity.dateresidenceend|date('Y-m-d H:i:s') }}</td>
            <td>{{ entity.datesortiedefabrique|date('Y-m-d H:i:s') }}</td>
            <td>{{ entity.shorttext }}</td>
            <td>{{ entity.longtext }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('companie_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('companie_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('companie_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
