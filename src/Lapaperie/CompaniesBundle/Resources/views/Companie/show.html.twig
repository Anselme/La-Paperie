{% extends "LapaperieCompaniesBundle::layout.html.twig" %}

{% block content %}

<h1>Companie</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Cr√©ation</th>
            <td>{{ entity.creation }}</td>
        </tr>
        <tr>
            <th>Date_residence_beginning</th>
            <td>{{ entity.dateresidencebeginning|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Date_residence_end</th>
            <td>{{ entity.dateresidenceend|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Date_sortie_de_fabrique</th>
            <td>{{ entity.datesortiedefabrique|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Short text</th>
            <td>{{ entity.shorttext }}</td>
        </tr>
        <tr>
            <th>Short text</th>
            <td>{{ entity.longtext }}</td>
        </tr>
        <tr>
            <th>Images</th>
            <td>{% for image in entity.images %}{{ image.name }}<br/>{% endfor %}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('companie') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('companie_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('companie_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
