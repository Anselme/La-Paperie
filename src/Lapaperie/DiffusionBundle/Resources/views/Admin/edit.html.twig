{% extends "LapaperieDiffusionBundle:Admin:form.html.twig" %}

{% block legend%}Diffusion/Infusion :  {{ entity.title}} {% endblock %}

{% block action %}
<form action="{{ path('diffusion_edit', { 'id': entity.id } ) }}" method="post" {{ form_enctype(form) }}>
{% endblock %}

{% block button %}Enregistrer les modifications{% endblock %}

{% block image %}
<div class="page-header">
<h2>Galerie d'images</h2>
</div>

<form action="{{ path('diffusion_edit', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_image_form) }}>
{% include('LapaperieGalleryBundle:Admin:form.html.twig') %}
</form>

<div class="clearfix"></div>
  {% for image in entity.gallery.images %}
      <img src="{{ image.getWebPath  | apply_filter('companie_thumbnail') }}" width="84"/>
      <a href="{{ path('image_diffusion_delete', { 'id':image.id}) }}" class="confirmimg">
      <img src="{{ asset('bundles/lapaperiemain/images/icons/cancel.png')}}" alt="Supprimer cette image">
      </a>
  {% endfor %}
{% endblock %}

{% block file %}
<div class="page-header">
<h2>Fichier à télécharger ou mp3</h2>
</div>

  <form action="{{ path('diffusion_edit', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_file_form) }}>
{% include('LapaperieFileUploadBundle:Admin:form.html.twig') %}
</form>
<div class="clearfix"></div>

{% if entity.file %}
<div class="page-header">
<h3>Fichier en ligne
<small>
{{entity.file.link}}
<a href="{{ path('diffusion_file_delete', { 'id':entity.id}) }}" class="confirmfile">
<img src="{{ asset('bundles/lapaperiemain/images/icons/cancel.png')}}" alt="Supprimer ce fichier">
</a>
</small>
</h3>
</div>
<div class="clearfix"></div>
{% endif %}

{% endblock %}


{% block delete %}
  <div class="row">
    <div class="span5 offset12">
        <form action="{{ path('diffusion_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn danger confirm">Supprimer cette Diffusion/Infusion</button>
        </form>
      </div>
      </div>
{% endblock %}
