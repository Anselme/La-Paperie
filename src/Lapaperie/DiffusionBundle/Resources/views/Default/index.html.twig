{% extends "LapaperieMainBundle:Main:diffusion-infusion.html.twig" %}

{% block submenu %}{{ action.id }}{% endblock %}

{% block content %}
<div class="page_content">

<h2>{{ action.title }}</h2>

{% if action.video %}
<div class="illustration_right">
{{ action.video | raw }}
</div>
{% elseif not action.gallery.images.isEmpty %}
<div class="illustration_right">
  <a href="{{ action.gallery.images[0].getWebPath | apply_filter('companie_big') }}" rel="prettyPhoto[pp_gal]" >
    <img src="{{ action.gallery.images[0].getWebPath | apply_filter('action') }}" width="352" />
    </a>
</div>
{% endif %}

  <div id="focus">
    {{ action.contenu | raw }}
  </div>

</div>
<div class="clear"></div>

  {% if action.file %}
  {% set file = action.file %}
  {% include('LapaperieFileUploadBundle:Default:index.html.twig') %}
  {% endif %}

<div class="gallerie_thumbnails">
  {% for image in action.gallery.images %}
  <a href="{{ image.getWebPath | apply_filter('companie_big') }}" rel="prettyPhoto[pp_gal]" >
  <img src="{{ image.getWebPath | apply_filter('companie_thumbnail') }}" width="84" />
  </a>
  {% endfor %}
  </div>

{% endblock %}
