{% block submenu %}projets{% endblock %}

{% block menubyyear %}
{% if archives %}
<ul class="subnav">
{% for archive in archives %}
<li class="{{ archive.year == year ? 'active' : ''}}" >
<a href="{{ path('LapaperieMainBundle_soutiencreation_projets_byyear', {'year': archive.year}) }}">{{ archive.year }}</a>
</li>
{% endfor %}
</ul>
{% endif %}
{% endblock %}

