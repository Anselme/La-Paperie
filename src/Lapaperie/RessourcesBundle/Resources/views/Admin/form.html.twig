{% extends "LapaperieAdminBundle::layoutAdmin.html.twig" %}

{% block content %}

{% block action %}
{% endblock %}

<div class="page-header">
<h2>{% block legend %}{% endblock %}</h2>
</div>

    {{ form_errors(form) }}

<fieldset>

    <div class="clearfix">
    {{ form_label(form.title, 'Titre') }}
    <div class="input">
    {{ form_errors(form.title) }}
    {{ form_widget(form.title) }}
    </div>
    </div>
    <div class="clearfix">
    {{ form_label(form.contenu, 'Contenu') }}
    <div class="input">
    {{ form_errors(form.contenu) }}
    {{ form_widget(form.contenu, { 'attr': {'class': 'editor'} } ) }}
    </div>
    </div>
    <div class="clearfix">
    {{ form_label(form.video, 'Embded') }}
    <div class="input">
    {{ form_errors(form.video) }}
    {{ form_widget(form.video) }}
    </div>
    </div>
    <div class="clearfix">
    {{ form_label(form.isPreviousYear, 'Archiver') }}
    <div class="input">
    {{ form_errors(form.isPreviousYear) }}
    {{ form_widget(form.isPreviousYear) }}
    </div>
    </div>
    <div class="clearfix">
    {{ form_label(form.year, 'Année de classement') }}
    <div class="input">
    {{ form_errors(form.year) }}
    {{ form_widget(form.year) }}
    </div>
    </div>

    {{ form_rest(form) }}
</fieldset>
        <button type="submit" class="btn primary">{% block button %}{% endblock %}</button>

        <a href="{{ path('ressources') }}" class="btn">
        Retour à la liste des Ressources
        </a>
</form>

